<?php

namespace App\Http\Controllers;

use Illuminate\Http\Request;

class Administradorcontroller extends Controller
{
    //
    public function adcionar(Request $request){
    	$adm = \App\Usuario();
    	$adm->nome = $request->nome;
    	$adm->cpf = $request->cpf;
    	$adm->senha = $request->senha;
    	$adm->email = $request->email;
    	$adm->save();
    	return redirect("/listar/Usuarios");
    }
    
    public function cadastrar(){
	return view('cadastrarUsuarios')    
    }
    
    public function listar () {
		$adm = \App\Usuario::all();
		return view('listaUsuarios',['usuario' => $adm]);   
    }
    
    public function editar() {
		$adm = \App\Usuario::find($request->id);
		return view('editarUsuarios', ['usuario'=>$adm]);    
    }
    
    public function atualizar(Request $request){
		$adm = \App\Usuario()::find($request->id);    
    	$adm->email = $request->email;
    	$adm->update();
    	$adm->senha = $request->senha;
    	$adm->update();
    	return redirect("/listar/Usuarios");
    	
    }
    
    public function remover (Request $request) {
    	$adm = \App\Usuario()::find($request->id);
    	$adm->delete();
    	return redirect("/listar/Usuarios");
}






